<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cirlce">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <declare-styleable name="ItemTeam">
        <attr name="imageUser" format="string"/>
        <attr name="textUserName" format="string"/>
        <attr name="userState" format="reference"/>
    </declare-styleable>
    <style name="radius">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/blueDark</item>
        <item name="colorControlNormal">@color/lightBlue</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
    </style>
</resources>