<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentInfoUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/lightBlue">
        <TextView
            android:id="@+id/EmailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Email"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de valorant"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/UserNmaeValorant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User"
            android:textColor="@color/blueDark"
            android:textColorHint="@color/blueDark"
            android:background="@drawable/edit_text_background"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Tag"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/Usertag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tag"
            android:textColor="@color/blueDark"
            android:textColorHint="@color/blueDark"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="20dp"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            />
        <Button
            android:id="@+id/BtnUpdateDataUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar datos "
            android:textSize="18sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:backgroundTint="@color/red"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_weight="1"
                android:text="Cerrar SeciÃ³n"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_margin="5dp"

                />
            <Button
                android:id="@+id/btnDeleteAcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:text="Borrar cuenta"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_margin="5dp"

                />
        </LinearLayout>

    </LinearLayout>



</FrameLayout>