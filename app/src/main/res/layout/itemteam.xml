<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ItemimageUser"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/cirlce"
        android:src="@drawable/portada"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
       />
    <TextView
        android:id="@+id/Text_ItemUserName"
        android:contentDescription="User name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="#####"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center|start"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/image_ItemUserState"
        android:layout_toEndOf="@id/ItemimageUser"
       />
    <ImageView
        android:id="@+id/image_ItemUserState"
        android:contentDescription="User State"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/state_undefine"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>